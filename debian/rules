#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

MESON_OPTIONS = \
	-Dcap=enabled \
	-Ddocumentation=enabled \
	-Dpg=enabled \
	-Dseccomp=enabled \
	-Dsodium=enabled \
	-Dsystemd=enabled \
	--werror

%:
	dh $@ --no-start --restart-after-upgrade --with sphinxdoc

override_dh_auto_configure:
	dh_auto_configure -- $(MESON_OPTIONS)
